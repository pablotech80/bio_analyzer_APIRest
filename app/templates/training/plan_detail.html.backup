{% extends "base.html" %}

{% block title %}{{ plan.title }}{% endblock %}

{% block content %}
<div class="container-fluid" style="background: #f8f9fa;">
    <div class="container py-4">
        <div class="row">
            <div class="col-12">
                <!-- Header Profesional -->
                <div class="bg-white shadow-sm rounded p-4 mb-3">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h1 class="h4 mb-2 fw-bold text-dark">{{ plan.title }}</h1>
                            <div class="text-muted small">
                                <span>Creado: {{ plan.created_at.strftime('%d/%m/%Y') }}</span>
                                {% if plan.start_date and plan.end_date %}
                                <span class="mx-2">|</span>
                                <span>Vigencia: {{ plan.start_date.strftime('%d/%m/%Y') }} - {{ plan.end_date.strftime('%d/%m/%Y') }}</span>
                                {% endif %}
                                {% if plan.is_active %}
                                <span class="badge bg-success ms-2">Activo</span>
                                {% endif %}
                            </div>
                        </div>
                <div>
                    {% if current_user.is_admin %}
                    <a class="btn btn-outline-secondary rounded-pill me-2" href="{{ url_for('admin.user_analyses', user_id=plan.user_id) }}">
                        <i class="bi bi-arrow-left me-1"></i>Volver al Dashboard
                    </a>
                    {% else %}
                    <a class="btn btn-outline-secondary rounded-pill me-2" href="{{ url_for('training.my_plans') }}">
                        <i class="bi bi-arrow-left me-1"></i>Mis Planes
                    </a>
                        <div>
                            {% if current_user.is_admin %}
                            <a class="btn btn-sm btn-outline-secondary" href="{{ url_for('admin.user_analyses', user_id=plan.user_id) }}">
                                ← Volver
                            </a>
                            {% else %}
                            <a class="btn btn-sm btn-outline-secondary" href="{{ url_for('training.my_plans') }}">
                                ← Mis Planes
                            </a>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Objetivo y Descripción -->
                {% if plan.goal or plan.description %}
                <div class="bg-white shadow-sm rounded p-4 mb-3">
                    {% if plan.goal %}
                    <div class="mb-3">
                        <h6 class="text-uppercase text-muted small mb-2">Objetivo</h6>
                        <p class="mb-0 fw-medium">{{ plan.goal }}</p>
                    </div>
                    {% endif %}
                    {% if plan.description %}
                    <div>
                        <h6 class="text-uppercase text-muted small mb-2">Descripción</h6>
                        <p class="mb-0">{{ plan.description }}</p>
                    </div>
                    {% endif %}
                </div>
                {% endif %}

                <!-- Configuración del Plan -->
                {% if plan.frequency or plan.routine_type or plan.duration_weeks %}
                <div class="bg-white shadow-sm rounded p-4 mb-3">
                    <h5 class="mb-4 pb-2 border-bottom">Configuración del Plan</h5>
                    
                    <div class="row g-3">
                        {% if plan.frequency %}
                        <div class="col-md-4">
                            <div class="text-center p-3 border rounded" style="border-left: 4px solid #3498DB !important;">
                                <div class="text-muted small mb-1">Frecuencia</div>
                                <div class="h5 mb-0 fw-bold text-primary">{{ plan.frequency }}</div>
                            </div>
                        </div>
                        {% endif %}
                        
                        {% if plan.routine_type %}
                        <div class="col-md-4">
                            <div class="text-center p-3 border rounded" style="border-left: 4px solid #E67E22 !important;">
                                <div class="text-muted small mb-1">Tipo</div>
                                <div class="h5 mb-0 fw-bold" style="color: #E67E22;">{{ plan.routine_type }}</div>
                            </div>
                        </div>
                        {% endif %}
                        
                        {% if plan.duration_weeks %}
                        <div class="col-md-4">
                            <div class="text-center p-3 border rounded" style="border-left: 4px solid #27AE60 !important;">
                                <div class="text-muted small mb-1">Duración</div>
                                <div class="h5 mb-0 fw-bold text-success">{{ plan.duration_weeks }} semanas</div>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
                {% endif %}

                <!-- Rutina de Entrenamientos -->
                {% if plan.workouts %}
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-lightbulb me-2"></i>Recomendaciones
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li class="mb-2">
                            <strong>Calentamiento:</strong> Dedica 5-10 minutos antes de cada sesión
                        </li>
                        <li class="mb-2">
                            <strong>Técnica:</strong> Prioriza la forma correcta sobre el peso
                        </li>
                        <li class="mb-2">
                            <strong>Descanso:</strong> Permite 48-72h de recuperación entre sesiones del mismo grupo muscular
                        </li>
                        <li class="mb-2">
                            <strong>Progresión:</strong> Aumenta gradualmente la intensidad cada 2-3 semanas
                        </li>
                        <li class="mb-0">
                            <strong>Hidratación:</strong> Bebe agua antes, durante y después del entrenamiento
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Datos del Análisis Relacionado -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-person-badge me-2"></i>Datos del Análisis
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-6 col-md-3">
                            <small class="text-muted d-block">Peso</small>
                            <strong>{{ '%.1f'|format(analysis.weight) }} kg</strong>
                        </div>
                        <div class="col-6 col-md-3">
                            <small class="text-muted d-block">Altura</small>
                            <strong>{{ '%.1f'|format(analysis.height) }} cm</strong>
                        </div>
                        <div class="col-6 col-md-3">
                            <small class="text-muted d-block">Masa Magra</small>
                            <strong>{{ '%.1f'|format(analysis.lean_mass) }} kg</strong>
                        </div>
                        <div class="col-6 col-md-3">
                            <small class="text-muted d-block">FFMI</small>
                            <strong>{{ '%.1f'|format(analysis.ffmi) }}</strong>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="{{ url_for('bioanalyze.result', analysis_id=analysis.id) }}" 
                           class="btn btn-sm btn-outline-primary rounded-pill">
                            <i class="bi bi-eye me-1"></i>Ver Análisis Completo
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
